generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Raffle {
  id           Int       @id @default(autoincrement())
  title        String
  description  String
  price        Float
  totalTickets Int
  soldTickets  Int       @default(0)
  drawDate     DateTime?
  isDrawn      Boolean   @default(false)
  createdAt    DateTime  @default(now())
  tickets      Ticket[]
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  tickets   Ticket[]
}

model Ticket {
  id           Int      @id @default(autoincrement())
  raffleId     Int
  userId       Int
  ticketNumber Int
  createdAt    DateTime @default(now())

  raffle Raffle @relation(fields: [raffleId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
}
